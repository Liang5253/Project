<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxz.org.dao.RoleDao" >
	<cache/>
	
	
	<!-- insertRole 单行插入，自动递增id -->
	<insert id="insertRole" parameterType="com.lxz.org.pojo.RoleBean" useGeneratedKeys="true" keyProperty="roleId">
	<selectKey keyProperty="roleId" resultType="int" order="BEFORE" >
		select decode(max(role_id),null,1,max(role_id)+1) as newId from t_role
	</selectKey>
		insert into t_role(role_id,role_name,role_note) 
		values(#{roleId},#{roleName},#{roleNote})
	</insert>
	
	
	
	
	<!-- updateRole -->
	<update id="updateRole" parameterType="com.lxz.org.pojo.RoleBean">
		update t_role
		<set>
			<if test="roleName !=null ">
				role_name=#{roleName},
			</if>
			<if test="roleNote != null">
				role_note=#{roleNote}
			</if>
			where role_id=#{roleId}
		</set>
	</update>
	<!-- deleteRole -->
	<delete id="deleteRole" parameterType="int">
		delete from t_role where role_id=#{id}
	</delete>
	<!-- select col sql -->
	 <sql id="colName">
	 	select role_id,
	 		   role_name,
	 		   role_create_date,
	 		   role_note
	 		   from t_role
	 </sql>
	 <!-- resultMapRole -->
	 <resultMap type="com.lxz.org.pojo.RoleBean" id="roleMap">
	 	<id column="role_id" property="roleId"/>
	 	<result column="role_name" property="roleName"/>
	 	<result column="role_create_date" property="roleCreateDate"/>
	 	<result column="role_note" property="roleNote"/>
	 </resultMap>
	<!-- getRole -->
	<select id="getRole" parameterType="int" resultMap="roleMap">
	<include refid="colName"/> where role_id=#{id}
	</select>
	<!-- findRoles -->
	<select id="findRoles" parameterType="string" resultMap="roleMap">
		<include refid="colName"/> where role_name like concat('%',#{roleName},'%')
	</select>
	
</mapper>
